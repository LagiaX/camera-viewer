<Page x:Class="CV.CameraModes.BlankTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:CV.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BlankTab" KeepAlive="False">

    <StackPanel Background="GhostWhite">
        <Frame Name="frame_BlankTab"/>
        <StackPanel HorizontalAlignment="Center" Margin="0,30,0,0">
            <Border Name="border_BlankTab" Background="LightGray" BorderBrush="DimGray" BorderThickness="1" CornerRadius="5" Padding="15" Margin="15">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center" FontSize="22">Camera Type</TextBlock>
                    <controls:CVComboBox x:Name="camList_BlankTab" Width="210" Height="Auto" FontSize="20" Margin="0,10,0,10"/>
                    <Button Name="confirmButton_BlankTab" Content ="Confirm" Width="210" Height="Auto" FontSize="20" Click="ConfirmButton_Handler"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
    </StackPanel>
</Page>
